    <div class="bg-light border border-primary p-3 rounded m-3">
        <h1 class="display-4 text-center">Daily Schedule</h1>
    </div>
    <hr>
    <div class="bootstrap-iso">
        <div class="container-fluid">
         <div class="row">
          <div class="col-md-6 col-sm-6 col-xs-12">
       
           <!-- Form code begins -->
           <form method="post" action="/todo/date">
             <div class="form-group"> <!-- Date input -->
               <label class="control-label" for="date">Date</label>
               <input class="form-control" id="date" name="date" placeholder="MM/DD/YYY" type="text"/>
             </div>
             <div class="form-group"> <!-- Submit button -->
               <button class="btn btn-primary " name="submit" type="submit">Submit</button>
             </div>
            </form>
            <!-- Form code ends --> 
       
           </div>
         </div>    
        </div>
       </div>
    <br>
    <ul>
        
        <% var i=0;for (item of items){%>
            <% if ( item.hide ==false) {%>
            <li class="mb-2"> 
                <%= item.time %><br>
                <b><%= item.title%>:</b><i><%= item.description %></i>
                <% if (item.completed) {;%>
                    
                    <a href="/todo/completed/false/<%= item._id%>"> Done</a>
                <% } else {i++%>
                    <a href="/todo/completed/true/<%= item._id%>"> In Process</a>
                <% } %>
                <br>
                <%= item.createdAt %> 
                
                <a href="/todo/delete/<%= item._id%>">(delete) </a>
                
                <a  href="/todo/edit/<%= item._id%>"> (edit)</a>
            </li>
        <% }%>
        <% }%>
    </ul>
    <% if (true || loggedIn) {%>  
        <form method="get"  action="/todo/refresh">
            <input class="btn btn-danger " type="submit" value="Schedule Completed"><br>
        </form>
        <br>
    <% } %>
    <hr>
    <form method="post" action="/todo/add">
        time:<select id="framework" type="text" name="time">
            <option value="00:00-01:00">00:00-01:00</option>
